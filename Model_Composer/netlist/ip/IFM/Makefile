ECHO        := @echo

HDL_WS      := .
HDL_SRC     := src
PRO_GEN_TCL := ProjectGeneration.tcl

#################################################################################################
# Declare those targets as .PHONY that must be executed by "make" even if a file with
# the same name exists.
#################################################################################################
.PHONY: help all gen_vivado_project genip genxo clean

#################################################################################################
# Below is the help on all the available targets to user
#################################################################################################
help::
	$(ECHO) "Makefile Usage:"
	$(ECHO) "  make all"
	$(ECHO) "  Generate vivado project. "
	$(ECHO) ""
	$(ECHO) "  make gen_vivado_project"
	$(ECHO) "  Generate vivado project. "
	$(ECHO) ""
	$(ECHO) "  make clean"
	$(ECHO) "  Delete generated files and folders."

#################################################################################################
# Generate Vivado project
#################################################################################################
all: gen_vivado_project

#################################################################################################
# Generate Vivado project
#################################################################################################
gen_vivado_project:
	$(ECHO) "  *******************************************"
	$(ECHO) " Generating Vivado project. "
	cd ${HDL_SRC} && vivado -mode batch -notrace -source ${PRO_GEN_TCL}

#################################################################################################
# Generate HDL Kernel xo. This is a private target and should not be invoked directly.
#################################################################################################
genip: genxo

#################################################################################################
# Generate HDL Kernel xo. This is a private target and should not be invoked directly.
#################################################################################################
genxo:
	$(ECHO) "This target is generated for the Hardware Validation flow,"
	$(ECHO) "or when the Export Type in the Export Tab in the Hub block is set to Generate .xo. "

#################################################################################################
# Delete generated files and folders
#################################################################################################
clean:
	$(ECHO) "  *******************************************"
	$(ECHO) " Deleting all generated files and folders. "
	ls -a -I . -I .. -I Makefile -I data -I src | xargs -i rm -rf {}
