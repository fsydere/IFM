ECHO              := @echo
  
KERNEL_DIRS       := $(patsubst %/,%,$(dir $(wildcard */Makefile)))
KERNEL_NAME       := $(KERNEL_DIRS)
KERNEL_NAME_IP    := $(addsuffix .ip,$(KERNEL_NAME))
KERNEL_NAME_CLEAN := $(addsuffix .clean,$(KERNEL_NAME))
  
#################################################################################################
# Declare those targets as .PHONY that must be executed by "make" even if a file with
# the same name exists.
#################################################################################################
.PHONY: help all genip clean 

 #################################################################################################
#Below is the help on all the available targets to user
#################################################################################################
help::
	$(ECHO) "Makefile Usage:"
	$(ECHO) "  make all"
	$(ECHO) "      Trigger "all" target on all active IPs in this design"
	$(ECHO) ""
	$(ECHO) "  make genip"
	$(ECHO) "      Trigger "genip" target on all active IPs in this design"
	$(ECHO) ""
	$(ECHO) "  make clean"
	$(ECHO) "      Delete generated files and folders."
  
################################################################
# Trigger "all" target on all active IPs in this design
################################################################
all: $(KERNEL_NAME)

################################################################
# Trigger "genip" target on all active IPs in this design
################################################################
genip: $(KERNEL_NAME_IP)

#################################################################################################
# This target is private. Do not invoke directly.
# This target will iterate over all subdirectories of IP directory and triggers "all" target
#################################################################################################
$(KERNEL_NAME):
	$(MAKE) all -C $@

#################################################################################################
# This target is private. Do not invoke directly
# This target will iterate over all subdirectories of IP directory and triggers "genip" target
#################################################################################################
$(KERNEL_NAME_IP):
	$(MAKE) genip -C $(basename $@)

################################################################
# Delete generated files and folders
################################################################
clean: $(KERNEL_NAME_CLEAN)
  
$(KERNEL_NAME_CLEAN):
	$(MAKE) clean -C $(basename $@)
